@model FirstWebApp.Models.Customer
@* Strongly typed view - View is bound with a Model Type *@

<div class="card shadow mt-5">
    <div class="card-header bg-dark p-3 text-warning text-center">
        <h1>@ViewData["PageTitle"]</h1>
        <p class="lead">@ViewBag.Description</p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6"><span class="fw-bold">Customer Id</span></div>
            <div class="col-6"><span class="text-success">@Model.CustomerId</span></div>
        </div>
        <div class="row">
            <div class="col-6"><span class="fw-bold">Company Name</span></div>
            <div class="col-6"><span class="text-success">@Model.CompanyName</span></div>
        </div>
        <div class="row">
            <div class="col-6"><span class="fw-bold">Contact Name</span></div>
            <div class="col-6"><span class="text-success">@Model.ContactName</span></div>
        </div>
        <div class="row">
            <div class="col-6 "><span class="fw-bold">City</span></div>
            <div class="col-6"><span class="text-success">@Model.City</span></div>
        </div>
        <div class="row">
            <div class="col-6"><span class="fw-bold">Country</span></div>
            <div class="col-6"><span class="text-success">@Model.Country</span></div>
        </div>
        <div class="row mt-3">
            <div class="offset-4 col-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger">Back to Home</a>
            </div>
        </div>
    </div>
</div>